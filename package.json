{
	"name": "@ak-network/permkit",
	"version": "0.1.3",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"docs:create": "typedoc --options typedoc.json",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"ast:build": "tsx ./ast/index.ts --out-dir ./dist/ast",
		"ast:create": "tsx ./ast/index.ts",
		"ast:search": "ts-node --project tsconfig.ast.json ./ast/search.ts"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/package": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22",
		"@vercel/functions": "^3.3.3",
		"@xenova/transformers": "^2.17.2",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"mongodb": "^7.0.0",
		"mongodb-memory-server": "^10.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.15",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"ts-morph": "^27.0.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typedoc": "^0.28.14",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vitest": "^4.0.10",
		"vitest-browser-svelte": "^2.0.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ak-network/permkit.git"
	},
	"author": "AK Network <ak-network@gmail.com>",
	"homepage": "https://github.com/ak-network/permkit#readme",
	"bugs": {
		"url": "https://github.com/ak-network/permkit/issues"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"permissions",
		"rbac",
		"abac",
		"pbac",
		"access-control",
		"authorization",
		"roles",
		"rules-engine",
		"server-side",
		"client-side",
		"hot-reload",
		"json-rules",
		"async-rules",
		"guard",
		"can-component"
	],
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT"
}
